{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"settings": {
		"appearanceTools": true,
		"custom": {
			"border": {
				"radius": {
					"sm": ".5rem",
					"md": "1rem",
					"lg": "3rem",
					"menu": "15rem"
				}
			}
		},
		"border": {
			"radius": true
		},
		"layout": {
			"contentSize": "41rem",
			"wideSize": "70rem",
			"allowEditing": false
		},
		"spacing": {
			"margin": true,
			"blockGap": true,
			"padding": true,
			"spacingScale": {
				"unit": "rem",
				"increment": 0.75,
				"operator": "*",
				"steps": 9
			}
		},
		"color": {
			"customDuotone": false,
			"customGradient": false,
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#E50A0A",
					"name": "Primaire foncé",
					"slug": "primary-dark"
				},
				{
					"color": "#FF0A0A",
					"name": "Primaire",
					"slug": "primary"
				},
				{
					"color": "#F9E1DC",
					"name": "Primaire léger",
					"slug": "primary-light"
				},
				{
					"color": "#212020",
					"name": "Texte courant",
					"slug": "contrast"
				},
				{
					"color": "#595957",
					"name": "Texte léger",
					"slug": "contrast-light"
				},
				{
					"color": "#FFFFFF",
					"name": "Texte fond sombre",
					"slug": "contrast-inverted"
				},
				{
					"color": "#FAFCF5",
					"name": "Fond",
					"slug": "base"
				},
				{
					"color": "#E6DBCE",
					"name": "Fond sombre",
					"slug": "base-darker"
				},
				{
					"color": "#FBFCF6",
					"name": "Fond clair",
					"slug": "base-light"
				}
			]
		},
		"typography": {
			"fontStyle": true,
			"textTransform": true,
			"fontWeight": false,
			"letterSpacing": true,
			"textDecoration": true,
			"dropCap": true,
			"customFontSize": true,
			"textAlign": true,
			"fontSizes": [
				{
					"name": "Titre: Page 1",
					"size": ".8701em",
					"slug": "476"
				},
				{
					"name": "Titre: Page 2",
					"size": ".87em",
					"slug": "475"
				},
				{
					"name": "Titre: Page 3",
					"size": ".72em",
					"slug": "300"
				},
				{
					"name": "Sur titre",
					"size": ".64em",
					"slug": "250"
				},
				{
					"name": "Date",
					"size": ".6401em",
					"slug": "251"
				},
				{
					"name": "Sous titre",
					"size": ".59em",
					"slug": "100"
				},
				{
					"name": "Titre: Article 1",
					"size": "2.6em",
					"slug": "750"
				},
				{
					"name": "Titre: Article 2",
					"size": "2.3em",
					"slug": "700"
				},
				{
					"name": "Titre: Article 3",
					"size": "1.7em",
					"slug": "650"
				},
				{
					"name": "Texte: Chapeau",
					"size": "1.2em",
					"slug": "600"
				},
				{
					"name": "Texte: Courant",
					"size": ".85em",
					"slug": "450"
				},
				{
					"name": "Annotation: Titre",
					"size": ".6em",
					"slug": "200"
				},
				{
					"name": "Annotation: Liens / contenu",
					"size": ".8em",
					"slug": "400"
				},
				{
					"name": "Crédits",
					"size": ".51em",
					"slug": "050"
				}
			],
			"fontFamilies": [
				{
					"name": "Défaut",
					"slug": "default",
					"fontFamily": "Georgia, serif"
				},
				{
					"name": "Décroché",
					"slug": "highlight",
					"fontFamily": "\"Neutronic\", sans-serif",
					"fontFace": [
						{
							"fontFamily": "Neutronic",
							"fontWeight": "400",
							"src": "file:./assets/fonts/Neutronic Regular.woff"
						},
						{
							"fontFamily": "Neutronic",
							"fontWeight": "600",
							"src": "file:./assets/fonts/Neutronic Semibold.woff"
						}
					]
				}
			]
		}
	},
	"styles": {
		"css": "body { overflow-x: hidden }",
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--default)",
			"fontSize": "1rem",
			"fontStyle": "normal",
			"fontWeight": "400"
		},
		"color": {
			"background": "var(--wp--preset--color--base-darker)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
				"color": {
					"background": "transparent",
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--highlight)"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "400"
				},
				"spacing": {
					"margin": {
						"top": "0", "right": "0", "bottom": "0", "left": "0"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-dark)"
					}
				}
			}
		}
	}
}