{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		}
	],
	"settings": {
		"layout": {
			"contentSize": "41rem",
			"wideSize": "70rem",
			"allowEditing": false
		},
		"spacing": {
			"padding": true,
			"spacingScale": {
				"unit": "rem",
				"increment": 0.75,
				"operator": "*",
				"steps": 9
			}
		},
		"color": {
			"customDuotone": false,
			"customGradient": false,
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#FF0A0A",
					"name": "Primaire",
					"slug": "primary"
				},
				{
					"color": "#F9E1DC",
					"name": "Primaire léger",
					"slug": "primary-light"
				},
				{
					"color": "#212020",
					"name": "Texte courant",
					"slug": "contrast"
				},
				{
					"color": "#595957",
					"name": "Texte léger",
					"slug": "contrast-light"
				},
				{
					"color": "#FFFFFF",
					"name": "Texte fond sombre",
					"slug": "contrast-inverted"
				},
				{
					"color": "#FAFCF5",
					"name": "Fond",
					"slug": "base"
				},
				{
					"color": "#E6DBCE",
					"name": "Fond sombre",
					"slug": "base-darker"
				}
			]
		},
		"typography": {
			"customFontSize": false,
			"defaultFontSizes": false,
			"fontWeight": false,
			"dropCap": false,
			"letterSpacing": false,
			"fontSizes": [
				{
					"name": "Titre, très petit",
					"size": ".5rem",
					"slug": "xs"
				},
				{
					"name": "Texte, petit",
					"size": ".75rem",
					"slug": "sm"
				},
				{
					"name": "Texte courant",
					"size": "1rem",
					"slug": "md"
				},
				{
					"name": "Titre, petit",
					"size": "1.25rem",
					"slug": "lg"
				},
				{
					"name": "Titre, moyen",
					"size": "1.5rem",
					"slug": "xl"
				},
				{
					"name": "Titre, grand",
					"size": "2.5rem",
					"slug": "xxl"
				},
				{
					"name": "Titre maximum (titre du site)",
					"size": "4.75rem",
					"slug": "xxxl"
				}
			],
			"fontFamilies": [
				{
					"name": "Défaut",
					"slug": "default",
					"fontFamily": "Georgia, serif"
				},
				{
					"name": "Décroché",
					"slug": "highlight",
					"fontFamily": "\"Neutronic\", sans-serif",
					"fontFace": [
						{
							"fontFamily": "Neutronic",
							"fontWeight": "400",
							"src": "file:./assets/fonts/Neutronic Narrow Light.otf"
						}
					]
				}
			]
		}
	},
	"styles": {
		"css": ".parchment {border-radius: 2rem }",
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--default)"
		},
		"color": {
			"background": "var(--wp--preset--color--base-darker)"
		},
		"blocks": {
			"core/paragraph": {
				"css": "text-align: justify"
			},
			"core/site-title": {
				"css": "text-align: center"
			}
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "400"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		}
	}
}